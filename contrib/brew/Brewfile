# Brewfile for Anero
# A Homebrew Brewfile installs all required dependencies in one shot.
# See:
#   https://coderwall.com/p/afmnbq/homebrew-s-new-feature-brewfiles
#   https://github.com/Homebrew/homebrew-bundle
#
# Execute `brew bundle` in the directory containing this Brewfile.

tap "homebrew/bundle"

brew "autoconf"
brew "autogen"
brew "automake"
brew "binutils"
brew "coreutils"
brew "cmake"
brew "pkg-config"
brew "boost"
brew "openssl"
brew "hidapi"
brew "zmq"
brew "libpgm"
brew "unbound"
brew "libsodium"
brew "miniupnpc"
brew "readline"
brew "expat"
brew "ccache"
brew "doxygen"
brew "graphviz"
brew "libunwind-headers"
brew "xz"
brew "protobuf"
brew "libusb"
